<Page x:Class="Магазин.Magas.Opisanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Magas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="Beige"
      Title="Opisanie">

    <Grid>
        <TextBlock Text="Описание книг" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="33" FontStyle="Italic" FontWeight="Bold" ></TextBlock>
        <Button x:Name="Back" Content="Назад" Click="Back_Click" Width="100" Height="40" FontSize="25" FontWeight="Bold"  FontStyle="Italic" Background="Gold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,26,0" ></Button>
        <ScrollViewer>
            <TextBox TextWrapping="Wrap" Margin="10,50,10,10" x:Name="txbText" IsEnabled="False" FontSize="25" FontStyle="Italic" FontWeight="Bold" />
        </ScrollViewer>
    </Grid>

</Page>
